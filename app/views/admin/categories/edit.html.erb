<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Edit chair
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">Category</li>
      <li class="active">Edit</li>
    </ol>
  </section>
  <br>
  <section class="container-fluid" style="background-color:white;margin: 0 10px 0px 10px;border-radius:5px;">
    <div style="margin-top:20px" class="col-xs-9 col-xs-offset-1">
      <%= form_for(@category, as: :category,:html => {:class => 'row'}, url: admin_category_path(@category.id), method: :put) do |f| %>
        <% flash.each do |key, value| %>
          <div id="error_explanation" style="mt-5">
            <div class="alert alert-danger col-lg-6 col-lg-offset-3">
               <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
               <strong><%= value unless value.blank? %>!</strong>
            </div>
          </div>
        <% end %>
        <div class="col-md-12 form-group p_star">
          <label>Name</label>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", placeholder: "Name", value: @category.name%>
        </div>
        <div class="col-md-12 form-group p_star">
          <label>Description</label>
          <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control", placeholder: "Description", value: @category.description %>
        </div>
        <div class="col-md-2 col-md-offset-5 form-group">
          <%= f.submit "Update", class: "btn btn-success", data: { confirm: "Do you want to update?" }, style:'width:100px;margin-top:50px'  %>
        </div>
      <% end %>
    </div>
  </section>
  
</div>