<div class="content-wrapper">
    <section class="content-header">
    <h1>
      User List
    </h1>
    <ol class="breadcrumb">
      <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
      <li class="active">User</li>
      <li class="active">List</li>
    </ol>
    </section>
    <br>
    <section class="content">
        <%= link_to "New", new_admin_user_path, {:class=>'btn btn-primary'}%>
        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Image</th>
              <th scope="col">Role</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
              <%- @users.each do |user| %>
                <tr>
                  <td><%= user.id %></td>
                  <td><%= user.name %></td>
                  <td><%= user.email %></td>
                  <td><%= image_tag current_user.img? ? user.img.url : "http://file.vforum.vn/hinh/2018/02/hinh-cho-cuoi-deu-cho-de-thuong-12.jpg", width: '100' %></td>
                  <td><%= user.role.upcase %></td>
                  <td><%= link_to "Edit", edit_admin_user_path(user.id), {:class=>'btn btn-warning'}%>
                      <%= link_to "Delete", admin_user_path(user.id), method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure?" } %>
                  </td>
                </tr>
              <% end %>
          </tbody>
        </table>
        <%= paginate @users, theme: 'twitter-bootstrap-3' %>
        
    </section>
</div>
