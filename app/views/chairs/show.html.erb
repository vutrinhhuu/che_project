  <!--================End Home Banner Area =================-->

  <!--================Single Product Area =================-->
  <div class="product_image_area section_padding">
    <div class="container">
      <div class="row s_product_inner justify-content-between">
        <div class="col-lg-7 col-xl-7">
          <div class="product_slider_img">
            <div id="vertical">
              <div data-thumb="img/product/single-product/product_1.png">
                <div><%=image_tag @chair.img %></div>
              </div>
              <!--<div data-thumb="img/product/single-product/product_1.png">-->
              <!--  <div><%=image_tag @chair.img %></div>-->
              <!--</div>-->
              <!--<div data-thumb="img/product/single-product/product_1.png">-->
              <!--  <div><%=image_tag @chair.img %></div>-->
              <!--</div>-->
              <!--<div data-thumb="img/product/single-product/product_1.png">-->
              <!--  <div><%=image_tag @chair.img %></div>-->
              <!--</div>-->
            </div>
          </div>
        </div>
        <div class="col-lg-5 col-xl-4">
          <div class="s_product_text">
            <h3><%= @chair.name %><h3>
            <h2>$<%=@chair.price%></h2>

            <p>
              <%= @chair.description %>
            </p>
            <% if @chair.quantity  == 0 %>
              <h3 align="center" class="text-danger">SOLD OUT</h3>
            <%else%>
              <%= form_for @order_item, remote: true do |f| %>
                <div class="card_area d-flex justify-content-between align-items-center">
                  <div class="product_count">
                    <span class="inumber-decrement"> <i class="ti-minus"></i></span>
                    <%= f.text_field :quantity, value: 1, class: "input-number", min: 1 %>
                    <span class="number-increment"> <i class="ti-plus"></i></span>
                  </div>
                  <%= f.hidden_field :chair_id, value: @chair.id %>
                  <%= f.submit "Add to Cart", class: "btn_3" %>
                  <a href="#" class="like_us"> <i class="ti-heart"></i> </a>
                </div>
              <% end %>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--================End Single Product Area =================-->

  <!--================comment==============-->
  <section class="col-xs-12">
    <div class="container">
        <div id="fb-root"></div>
        <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v5.0&appId=679136475896132&autoLogAppEvents=1"></script>
        <div class="fb-comments" data-href="<%=@url_current%>" data-width="1000" data-numposts="5"></div>
    </div>
  </section>
  <!--================comment===============-->


  <!-- product_list other start-->
  <section class="product_list best_seller">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
          <div class="section_tittle text-center">
            <h2>Other chair</h2>
          </div>
        </div>
      </div>
      <div class="row align-items-center justify-content-between">
        <div class="col-lg-12">
          <div class="best_product_slider owl-carousel">
            <% @list_other_chair.each  do |chair| %>
                <div class="single_product_item">
                 <div style="height:300px"><%= image_tag chair.img %></div>
                  <div class="single_product_text">
                    <%=   link_to chair.name, chair_path(chair.id), {:style=>'opacity:1;color:black;visibility: visible'}%>
                    <h3><b style="color:red">$<%= chair.price %></b></h3>
                  </div>
                </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--end list other chair-->
