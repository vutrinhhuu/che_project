

<!-- banner part start-->
<section class="banner_part">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-12">
                <div class="banner_slider owl-carousel">
                    <% @slide_chairs.each_with_index do |chair| %>
                        <div class="single_banner_slider">
                            <div class="row">
                                <div class="col-lg-6 col-md-8">
                                    <div class="banner_text">
                                        <div class="banner_text_iner">
                                            <h1><%= link_to chair.name, chair_path(chair.id)%></h1>
                                            <p><%= chair.description %></p>
                                            <a href="#" class="btn_2">buy now</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="banner_img d-none d-lg-block" style="width:500px;height:200px;top:17%">
                                    <%= image_tag chair.img %>
                                </div>
                            </div>
                        </div>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- banner part start-->

<section class="feature_part padding_top">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="section_tittle text-center">
                    <h2>Featured Category</h2>
                </div>
            </div>
        </div>
        <div class="row align-items-center justify-content-between">
            <% @categories.each do |category| %>
                <div class="col-lg-6 col-sm-6">
                    <div class="single_feature_post_text">
                        <p><%= category.description %></p>
                        <h3><%= category.name %></h3>
                        <a href="<%= chairs_path(category: category.id) %>%" class="feature_btn">EXPLORE NOW <i class="fas fa-play"></i></a>
                        <%= image_tag category.img, width: '65%' %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</section>

<!-- product_list start-->
<section class="product_list section_padding">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="section_tittle text-center">
                    <h2>List chair</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="product_list_slider owl-carousel">
                    <div class="single_product_list_slider">
                        <div class="row align-items-center justify-content-between">
                            <% @list_chair.each_with_index do |chair| %>
                                <div class="col-lg-3 col-sm-6">
                                    <div class="single_product_item">
                                        <div style="width: 262.5px"><%= image_tag chair.img %></div>
                                        <div class="single_product_text">
                                            <h4><%= link_to chair.name, chair_path(chair.id), {:style=>'opacity:1;color:black;visibility: visible'}%> </h4>
                                            <b class="text-danger">$<%= chair.price %></b>
                                            <% if chair.quantity >0 %>
                                                <a href="#" class="add_cart">+ add to cart<i class="ti-heart"></i></a>
                                            <%else%>
                                                <h3 align="left" class="text-danger">SOLD OUT</h3>
                                            <%end%>
                                        </div>
                                    </div>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div style = "text-align:center">
                <%= link_to "See more", chairs_path, class: "genric-btn info-border circle e-large"%>
            </div>
        </div>
    </div>
</section>
