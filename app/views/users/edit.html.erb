  <!--================Single Product Area =================-->
  <% flash.each do |key, value| %>
    <div id="error_explanation" style="mt-5">
        <div class="alert alert-danger col-lg-6 col-lg-offset-3">
          <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
          <strong><%= value unless value.blank? %>!</strong>
        </div>
    </div>
  <% end %>
  <% if user_signed_in? %>
    <%= form_for @user, url: user_path(@user.id), method: :put do |f| %> 
        <div class="product_image_area section_padding">
          <div class="container">
            <div class="row s_product_inner justify-content-between">
              <div class="col-lg-6 col-xl-6">
                <div class="avatar-upload">
                  <div class="avatar-edit">
                    <%= f.file_field :img %>
                    <label for="user_img"></label>
                  </div>
                  <div class="avatar-preview">
                      <div id="imagePreview" style="background-image: url(<%=@user.img%>);">
                      </div>
                  </div>
                </div>
              </div>
              <div class="col-lg-6 col-xl-6">
                <div class="s_product_text">
                   
                    <div class="col-md-12 form-group">
                      <label>Full name</label>   
                      <%= f.text_field :name, class: "form-control", placeholder: "Enter name"%>   
                    </div>
                    <div class="col-md-12 form-group">
                      <label>Nickname</label>   
                      <%= f.text_field :nickname, class: "form-control", placeholder: "Enter nickname"%>   
                    </div>
                    <div class="col-md-12 form-group">
                      <label>Gender</label>   
                      <%= f.select(:gender, ['male', 'female'], {:selected => current_user.gender}, { :class => 'form-control'}) %>              
                    </div>
                    <div class="col-md-12 form-group">
                      <label>Birthday</label>   
                      <%= f.date_field :birthday, class: "form-control"%>   
                    </div>
                    <div class="col-md-12 form-group">
                      <label>Email</label>   
                      <%= f.email_field :email, class: "form-control", placeholder: "Enter email"%>   
                    </div>
                    <div class="col-md-6 form-group col-md-offset-3">
                      <button type="submit" value="submit" class="btn_3">Update profile</button>
                    </div>
  
                </div>
              </div>
            </div>
          </div>
        </div>
      <%end%>
    <%end%>
  <!--================End Single Product Area =================-->
